// Truncation rounding or (default) rounding to nearest even (RNE) is enabled.
// This switch controls two related but different aspects of MIOpen behavior:
// 1.  How host code performs conversions of float to bfloat16, important only
//     for testing.
// 2.  How BF16 kernels (which are kind of mixed-precision now and expected to
//     remain in the future)  perform final conversion (and rounding) of FP32
//     to BF16 results. This affects the main functionality of the library.
#cmakedefine01 MIOPEN_USE_RNE_BFLOAT16
#cmakedefine01 MIOPEN_FP8_IEEE_EXPONENT_BIAS
#cmakedefine01 MIOPEN_FP8_CLIPPING

// clang-format off
#cmakedefine MIOPEN_DEFAULT_FIND_MODE @MIOPEN_DEFAULT_FIND_MODE@

// clang-format on
#cmakedefine01 MIOPEN_OFFLINE_COMPILER_PATHS_V2
#if MIOPEN_OFFLINE_COMPILER_PATHS_V2
// Include rocm-core header for get ROCm Install Path Method
#include <rocm-core/rocm_getpath.h>

// Include header for PATH_MAX
#if defined(__linux__)
#include <linux/limits.h>
#endif
#if defined(_WIN32)
#include <windows.h>
#ifndef PATH_MAX
#define PATH_MAX MAX_PATH
#endif
#endif

// Max Buffer Len to hold the Path
#define PATH_MAX_LEN (PATH_MAX + 1)

// Flags to help identify/differentiate Definitions for each MIOPEN Compiler Paths
typedef enum
{
    MIOPEN_AMDGCN_Flag          = 0,
    MIOPEN_OC_COMPILER_Flag     = 1,
    MIOPEN_HIP_COMPILER_Flag    = 2,
    MIOPEN_OFFLOAD_BUNDLER_Flag = 3,
    MIOPEN_CMP_MAX_Flag         = 4 // Should be last Flag definition
} MIOPEN_CMP_Flags_t;

// Global variable prototype of List to hold the Compiler Flag Paths
// The definition of this variable expected to be available in C/C++
// code of the Target Library
extern char MIOPEN_CMP_FLAGS[MIOPEN_CMP_MAX_Flag][PATH_MAX_LEN];

// Function to generate the MIOPEN Compiler Path Value using
// ROCm Base Install Path fetched using getROCmInstallPath()
// This approach depends on the getROCmInstallPath() provided by rocm-core
// This flag Paths are expected to be deprecated/modified in upcoming MAJOR Releases
char* generateFlagValue(MIOPEN_CMP_Flags_t x);

// MIOPEN Compiler Paths generated using ROCM Base install Path
// This will read the ROCM Base Install Path if it is already generated
// or (if required), will generate the MIOPEN Compiler Flag Path Values
// and return the value.
#define GET_MIOPEN_CMP_FLAGS(X) \
    ((MIOPEN_CMP_FLAGS[X][0] != 0) ? MIOPEN_CMP_FLAGS[X] : generateFlagValue(X))
#cmakedefine MIOPEN_AMDGCN_ASSEMBLER GET_MIOPEN_CMP_FLAGS(MIOPEN_AMDGCN_Flag)
#cmakedefine HIP_OC_COMPILER GET_MIOPEN_CMP_FLAGS(MIOPEN_OC_COMPILER_Flag)
#cmakedefine MIOPEN_HIP_COMPILER GET_MIOPEN_CMP_FLAGS(MIOPEN_HIP_COMPILER_Flag)
#cmakedefine MIOPEN_OFFLOADBUNDLER_BIN GET_MIOPEN_CMP_FLAGS(MIOPEN_OFFLOAD_BUNDLER_Flag)
#else
#cmakedefine MIOPEN_AMDGCN_ASSEMBLER "@MIOPEN_AMDGCN_ASSEMBLER@"
#cmakedefine HIP_OC_COMPILER "@HIP_OC_COMPILER@"
#cmakedefine MIOPEN_HIP_COMPILER "@MIOPEN_HIP_COMPILER@"
#cmakedefine MIOPEN_OFFLOADBUNDLER_BIN "@MIOPEN_OFFLOADBUNDLER_BIN@"
#endif // MIOPEN_OFFLINE_COMPILER_PATHS_V2

